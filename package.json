{
  "name": "vda5050-visualizer",
  "author": "bekir.bostanci",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite --host --port 8082",
    "build:bundle": "vite build",
    "preview": "vite preview --host",
    "test:unit": "vitest --environment jsdom",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .eslintignore",
    "electron:dev": "concurrently \"vite --host --port 8082\" \"wait-on tcp:8082 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-inject": "^5.0.3",
    "@vercel/analytics": "^1.4.1",
    "balm-ui": "^10.22.0",
    "bootstrap-icons": "^1.9.1",
    "buffer": "^6.0.3",
    "lodash": "^4.17.21",
    "mqtt": "^4.3.7",
    "process": "^0.11.10",
    "randomcolor": "^0.6.2",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.0",
    "url": "^0.11.1",
    "uuid": "^9.0.0",
    "v-network-graph": "^0.9.7",
    "vda-5050-lib": "github:bekirbostanci/vda-5050-lib",
    "vite": "^6.2.0",
    "vue": "^3.4.23",
    "vue-i18n": "^9.2.2",
    "vue-json-pretty": "^2.2.4",
    "vue-router": "^4.1.5",
    "vue3-loading-skeleton": "^0.0.13",
    "webpack": "^5.88.2",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/jsdom": "^20.0.0",
    "@types/lodash": "^4.17.15",
    "@types/node": "^22.13.7",
    "@types/pngjs": "^6.0.1",
    "@types/randomcolor": "^0.5.9",
    "@types/uuid": "^8.3.4",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.0.2",
    "@vue/tsconfig": "^0.1.3",
    "babel-loader": "^8.2.5",
    "concurrently": "^9.1.2",
    "cypress": "^14.1.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^8.22.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.3.0",
    "jsdom": "^20.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "process": "^0.11.10",
    "rimraf": "^5.0.1",
    "start-server-and-test": "^2.0.10",
    "typescript": "~4.7.4",
    "vite-plugin-commonjs": "^0.10.4",
    "vitest": "^3.0.7",
    "vue-loader": "^16.8.3",
    "vue-tsc": "^0.40.7",
    "wait-on": "^8.0.2"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.vda5050-visualizer",
    "productName": "vda5050-visualizer",
    "directories": {
      "output": "dist_electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
